name = Magazeen
description = A Drupal port for the bold magazine theme from <a href="http://wefunction.com/">Function</a> and <a href="http://smashingmagazine.com/">Smashing Magazine</a>.  Magazeen requires <a href="http://drupal.org/project/fusion">Fusion Core</a> and the <a href="http://drupal.org/project/skinr">Skinr</a> module to enable easy point-and-click theming.
base theme = fusion_core
core = 6.x
engine = phptemplate

stylesheets[all][] = css/magazeen-style.css

scripts[] = js/jquery.curvycorners.min.js
scripts[] = js/magazeen-script.js

regions[sidebar_first] = sidebar first
regions[sidebar_last] = sidebar last
regions[header_top] = header top
regions[header] = header
regions[preface_top] = preface top
regions[preface_bottom] = preface bottom
regions[content_top] = content top
regions[content] = content
regions[content_bottom] = content bottom
regions[postscript_top] = postscript top
regions[postscript_bottom] = postscript bottom
regions[footer] = footer
regions[node_top] = node top
regions[node_bottom] = node bottom

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

; Default theme settings
settings[theme_grid] = grid16-960
settings[theme_grid_options][] = grid16-960
settings[theme_grid_options][] = grid16-fluid
settings[fluid_grid_width] = fluid-100
settings[theme_font_size] = font-size-12
settings[sidebar_layout] = sidebars-split
settings[sidebar_first_width] = 3
settings[sidebar_last_width] = 3

; Inherit Skinr styles from Fusion Core
skinr[options][inherit_skins] = true

; Disable 12 column grid block widths inherited from fusion_core
skinr[grid12-width] =

; Sample Skinr style (uncomment to use, see Skinr section in CSS)
;skinr[fusion-example-styles][title] = Sample Skinr block styles
;skinr[fusion-example-styles][type] = checkboxes
;skinr[fusion-example-styles][features][] = block
;skinr[fusion-example-styles][options][1][label] = My sample Skinr style
;skinr[fusion-example-styles][options][1][class] = fusion-example-stylename


skinr[fusion-magazeen-views-styles][title] = Magazeen - Node styles
skinr[fusion-magazeen-views-styles][type] = radios
skinr[fusion-magazeen-views-styles][features][] = node
skinr[fusion-magazeen-views-styles][options][1][label] = <span class="preview-text">Rounded light blue background<span class="preview-icon" id="magazeen-rounded-node"></span></span>
skinr[fusion-magazeen-views-styles][options][1][class] = magazeen-rounded-block
skinr[fusion-magazeen-views-styles][options][2][label] = <span class="preview-text">Hot pink title background<span class="preview-icon" id="magazeen-hot-pink-node"></span></span>
skinr[fusion-magazeen-views-styles][options][2][class] = magazeen-hot-pink-title


skinr[fusion-magazeen-block-styles][title] = Magazeen - Block styles
skinr[fusion-magazeen-block-styles][type] = radios
skinr[fusion-magazeen-block-styles][features][] = block
skinr[fusion-magazeen-block-styles][options][1][label] = <span class="preview-text">Small dark block title<span class="preview-icon" id="magazeen-small-dark-title"></span></span>
skinr[fusion-magazeen-block-styles][options][1][class] = magazeen-small-dark-title
skinr[fusion-magazeen-block-styles][options][2][label] = <span class="preview-text">Tiny light blue block title<span class="preview-icon" id="magazeen-tiny-title"></span></span>
skinr[fusion-magazeen-block-styles][options][2][class] = magazeen-tiny-title
skinr[fusion-magazeen-block-styles][options][3][label] = <span class="preview-text">Rounded light blue block<span class="preview-icon" id="magazeen-rounded-block"></span></span>
skinr[fusion-magazeen-block-styles][options][3][class] = magazeen-rounded-block
skinr[fusion-magazeen-block-styles][options][4][label] = <span class="preview-text">Hot pink block title background<span class="preview-icon" id="magazeen-hot-pink-title"></span></span>
skinr[fusion-magazeen-block-styles][options][4][class] = magazeen-hot-pink-title

skinr[fusion-magazeen-list-styles][title] = Magazeen - List & menu styles
skinr[fusion-magazeen-list-styles][type] = radios
skinr[fusion-magazeen-list-styles][features][] = block
skinr[fusion-magazeen-list-styles][options][1][label] = <span class="preview-text">Rounded background on list items<span class="preview-icon" id="magazeen-rounded-list"></span></span>
skinr[fusion-magazeen-list-styles][options][1][class] = magazeen-rounded-list


skinr[fusion-magazeen-misc-styles][title] = Magazeen - Additional styles
skinr[fusion-magazeen-misc-styles][type] = checkboxes
skinr[fusion-magazeen-misc-styles][options][1][label] = <span class="preview-text">White and shadowed image border<span class="preview-icon" id="magazeen-image-border"></span></span>
skinr[fusion-magazeen-misc-styles][options][1][class] = magazeen-image-border

